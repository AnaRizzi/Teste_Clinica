@model IEnumerable<Teste_Clinica.Models.Clientes>

@{
    ViewBag.Title = "Consulta";
}

<h2>Consulta de Clientes</h2>

<p class="btn btn-default">
    @Html.ActionLink("Cadastrar novo cliente", "Cadastrar")
</p>
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IdCliente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IdCliente)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.ActionLink("Editar", "Editar", new { id = item.IdCliente }) |
            @Html.ActionLink("Ver detalhes", "Detalhes", new { id = item.IdCliente }) |
            @Html.ActionLink("Excluir", "Excluir", new { id = item.IdCliente })
        </td>
    </tr>
}

</table>
